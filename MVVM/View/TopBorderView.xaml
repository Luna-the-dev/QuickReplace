<UserControl x:Class="TextReplace.MVVM.View.TopBorderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="25">
    <Border Background="{StaticResource BackgroundColorDark}"
            MouseDown="Border_MouseDown">
        <Grid HorizontalAlignment="Stretch">
            <Label Name="Title"
                   Foreground="{StaticResource TextMedium}"
                   FontWeight="SemiBold"
                   Margin="5 2 0 0"
                   FontFamily="/Fonts/#Poppins-ExtraLight"/>

            <StackPanel HorizontalAlignment="Right"
                        Orientation="Horizontal">
                <Button Width="25" Height="25"
                        Content="🗕"
                        Foreground="{StaticResource TextMedium}"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Padding="0 0 0 2"
                        Click="MinimizeBtn_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}" Padding=" 0 0 0 2">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource BtnDark}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Width="25" Height="25"
                        Content="✕"
                        Foreground="{StaticResource TextMedium}"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Click="CloseBtn_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource BtnDark}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
