<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ColorPickerStyle" TargetType="UserControl">
        <Style.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="TabControlStyle.xaml" />
                    <ResourceDictionary Source="TextBoxStyle.xaml" />
                    <ResourceDictionary Source="ComboBoxStyle.xaml" />
                    <ResourceDictionary Source="RoundedColorDisplayStyle.xaml" />
                </ResourceDictionary.MergedDictionaries>
                <Style TargetType="Label">
                    <Setter Property="Foreground" Value="Snow" />
                </Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <Trigger Property="Name" Value="MainGrid">
                            <Setter Property="Background" Value="Transparent" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ResourceDictionary>
        </Style.Resources>
    </Style>
</ResourceDictionary>